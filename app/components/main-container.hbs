<LinkTo @route="cart" class="cart-link">
    <span class="fas fa-basket-shopping"></span>
    {{#if this.cart.itemList.length}}
        <span class="cart-count d-inline-flex justify-content-center align-items-center">
            {{ this.itemCount }}
        </span>        
    {{/if}}
</LinkTo>

<main class="container mt-5 mx-auto">
    {{yield}}
</main>